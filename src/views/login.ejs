<% if (messages.error && messages.error.length > 0) { %>
<div class="flash-message flash-error"><%= messages.error %></div>
<% } %> <% if (messages.success_msg && messages.success_msg.length > 0) { %>
<div class="flash-message flash-success"><%= messages.success_msg %></div>
<% } %>

<form id="loginForm" action="/login" method="post" class="col-md-4">
  <h1 class="text-center mb-4">Login To ChatSphere</h1>
  <input
    type="text"
    id="username"
    name="username"
    class="form-control"
    placeholder="Username"
    required
  />

  <input
    type="password"
    id="password"
    name="password"
    class="form-control"
    placeholder="Password"
    required
  />
  <button type="submit" class="btn btn-primary btn-block">Login</button>
</form>
<script src="/js/login.js"></script>
